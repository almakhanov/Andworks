<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".audio_list.AudioListActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout_waybill_products"
        style="@style/AppBarLayoutDefault">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_waybill_products"
            style="@style/ToolbarDefault">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_product_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout_waybill_products">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_waybill_products"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#555">

        </android.support.v7.widget.RecyclerView>
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>